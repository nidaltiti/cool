<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <!-- Cloudscraper -->
    <addon id="script.module.cloudscraper" name="CloudScraper" version="1.2.60" provider-name="venomous">
        <requires>
            <import addon="script.module.requests"/>
        </requires>
        <extension point="xbmc.python.module" library="lib"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Cloudscraper</summary>
            <description lang="en_GB">Bypass Cloudflare protections.</description>
            <platform>all</platform>
        </extension>
    </addon>

    <!-- Requests Toolbelt -->
    <addon id="script.module.requests-toolbelt" name="Requests Toolbelt" version="1.0.0" provider-name="Ian Cordasco, Cory Benfield">
        <requires>
            <import addon="script.module.requests" version="2.0.1"/>
        </requires>
        <extension point="xbmc.python.module" library="lib"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Requests Toolbelt</summary>
            <description lang="en_GB">A utility belt for advanced users of python-requests.</description>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
