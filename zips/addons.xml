<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <!-- Cloudscraper -->
    <addon id="script.module.cloudscraper" 
           name="CloudScraper" 
           version="1.2.60" 
           provider-name="venomous">
        <requires>
            <import addon="script.module.requests" version="2.31.0"/>
            <import addon="script.module.requests-toolbelt" version="0.10.1"/>
            <import addon="script.module.pycryptodome" version="3.4.3"/>
        </requires>
        <extension point="xbmc.python.module" library="lib"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_gb">Bypasses Cloudflare protection for HTTP requests.</summary>
            <description lang="en_gb">Cloudscraper module for Kodi.</description>
            <platform>all</platform>
        </extension>
    </addon>

    <!-- Requests Toolbelt -->
    <addon id="script.module.requests-toolbelt" 
           name="Requests Toolbelt" 
           version="1.0.0" 
           provider-name="Ian Cordasco, Cory Benfield">
        <requires>
            <import addon="script.module.requests" version="2.31.0"/>
        </requires>
        <extension point="xbmc.python.module" library="lib"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">A utility belt for advanced users of python-requests</summary>
            <description lang="en_GB">Packed for Kodi from https://pypi.org/project/requests-toolbelt/</description>
            <platform>all</platform>
            <license>Apache 2.0</license>
            <source>https://toolbelt.readthedocs.io/</source>
        </extension>
    </addon>
</addons>
