<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.myaddon"
       name="My Addon"
       version="1.0.0"
       provider-name="Nidal">

    <!-- Kodi Python Requirement -->
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <!-- Plugin Type -->
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <!-- Addon Metadata -->
    <extension point="xbmc.addon.metadata">
        <summary lang="en">My Example Kodi Addon</summary>
        <description lang="en">This is a sample Kodi addon that shows how to use addon.xml with icons.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>

</addon>
